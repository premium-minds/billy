<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="BillyFranceTestPersistenceUnit">
		
		<description>billy persistence unit for tests</description>

		<mapping-file>META-INF/orm-core.xml</mapping-file>
		<mapping-file>META-INF/orm-france.xml</mapping-file>
		<properties>
			<property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver" />
			<property name="jakarta.persistence.jdbc.url" value="jdbc:h2:/tmp/h2db" />
			<property name="jakarta.persistence.jdbc.user" value="billytest" />
			<property name="jakarta.persistence.jdbc.password" value="billytest" />

			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.globally_quoted_identifiers" value="true"/>
		</properties>
	</persistence-unit>

</persistence>
